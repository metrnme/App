<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectUserType">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hdng_rgstr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pg_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginEnd="@dimen/pg_margin"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/usertype"
            android:textSize="@dimen/hdng_txt_size" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pg_margin"
            android:layout_marginEnd="@dimen/pg_margin"
            android:fontFamily="@font/nunito_light"
            android:text="@string/please_select_user_type"
            android:textSize="@dimen/body_txt_size" />


        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pg_margin"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="@dimen/pg_margin"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nunito_light"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/musician"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pg_margin"
            android:layout_marginEnd="@dimen/pg_margin"
            android:layout_marginBottom="300dp"
            android:fontFamily="@font/nunito_light"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/listener"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pg_margin"
            android:layout_marginEnd="@dimen/pg_margin"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/done" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>