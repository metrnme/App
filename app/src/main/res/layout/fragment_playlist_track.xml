<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.PlaylistTrackFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Playlist Tracks"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/pg_margin"
            android:textSize="@dimen/hdng_txt_size"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginStart="@dimen/pg_margin"
            android:layout_marginEnd="@dimen/pg_margin" />

        <!--Just a simple recyclerview . Nothing is attached yet-->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playlisttracks"
            />
    </LinearLayout>
</layout>
